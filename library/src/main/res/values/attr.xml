<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MainMenu">
        <attr name="menu_scr" format="reference"/>
        <attr name="menu_color" format="reference|color"/>
        <attr name="menu_radius" format="dimension"/>
        <attr name="menu_margin" format="dimension"/>
        <attr name="menu_open" format="enum">
            <enum name="arc_left" value="0"/>
            <enum name="arc_right" value="1"/>
            <enum name="arc_top_left" value="2"/>
            <enum name="arc_top_right" value="3"/>
        </attr>
        <attr name="menu_animation_time" format="integer"/>
        <attr name="menu_elevation" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="stroke_color" format="color" />
        <attr name="bg_drawable" format="reference" />
        <attr name="stroke_width" format="dimension" />
        <attr name="from_corner_radius" format="dimension" />
        <attr name="to_corner_radius" format="dimension" />
        <attr name="to_width" format="dimension" />
        <attr name="to_height" format="dimension" />
    </declare-styleable>

</resources>